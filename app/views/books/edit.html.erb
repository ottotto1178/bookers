<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
            <% if  @book.errors.count == 1 %>
                <h2>1 error exist</h2>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% else %>
                <h2><%= @book.errors.count %> errors exist</h2>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
    <% end %>
    <div class="field"><%= f.text_field :title %></div>
    <div class="field"><%= f.text_area :body %></div>
    <div class="actions"><%= f.submit 'Update Book' %></div>
<% end %>
<%= link_to 'Show', book_path %> |
<%= link_to 'Back', books_path %>